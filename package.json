{
    "name": "brainpop-quiz-e2e",
    "version": "1.0.0",
    "description": "E2E tests for BrainPOP Quiz application",
    "scripts": {
        "test:e2e": "playwright test",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:report": "playwright show-report",
        "test:e2e:chrome": "playwright test --project=chromium",
        "test:e2e:firefox": "playwright test --project=firefox",
        "test:e2e:safari": "playwright test --project=webkit",
        "test:e2e:mobile": "playwright test --project='Mobile Chrome'",
        "test:setup": "cd server && php artisan migrate:fresh --seed --env=testing",
        "test:install": "npx playwright install"
    },
    "devDependencies": {
        "@playwright/test": "^1.53.1"
    },
    "keywords": [
        "e2e",
        "testing",
        "playwright",
        "vue",
        "laravel"
    ],
    "author": "BrainPOP Quiz Team",
    "license": "MIT"
}
